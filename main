    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 40px 20px;
      box-sizing: border-box;
      position: relative;
      z-index: 1;
    }

    h1 {
      font-size: 3.5rem;
      margin-bottom: 10px;
      text-shadow: 1px 1px 2px #fff;
      z-index: 2;
    }

    .profile-info {
      max-width: 600px;
      font-size: 1.3rem;
      background: #ffe5f0;
      padding: 25px 30px;
      border-radius: 20px;
      box-shadow: 0 0 15px #f7c0de;
      text-align: center;
      z-index: 2;
      position: relative;
    }

    .profile-info p {
      margin: 15px 0;
    }

    #flower-container {
      position: fixed;
      top: 0; left: 0; width: 100%; height: 100%;
      pointer-events: none;
      overflow: hidden;
      z-index: 0; /* Make sure flowers are behind content */
      background: transparent;
    }

    .flower {
      position: absolute;
      width: 40px;
      height: 40px;
      background: url('https://i.postimg.cc/YqW4dZ43/flower.png') no-repeat center/contain;
      animation-name: fall;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
    }

    @keyframes fall {
      0% {
        transform: translateY(-50px) rotate(0deg);
        opacity: 1;
      }
      100% {
        transform: translateY(110vh) rotate(360deg);
        opacity: 0;
      }
    }
